<Window x:Class="CFDI.Views.BusquedaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CFDI.Views"
        mc:Ignorable="d"
        Title="Busqueda" Height="279.932" Width="575.165" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" ItemsSource="{Binding ProductosGrid}" VerticalAlignment="Top" Height="191" Width="538" Margin="10,41,0,0" IsReadOnly="True" CanUserAddRows="True"/>
        <Label x:Name="label" Content="Nombre" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="66"/>
        <TextBox x:Name="txtbusqueda" HorizontalAlignment="Left" Height="26" Margin="76,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="385"/>
        <Button x:Name="btnbuscar" Content="Buscar" Command="{Binding BuscarP}" HorizontalAlignment="Left" Margin="466,10,0,0" VerticalAlignment="Top" Width="82" Height="26"/>

    </Grid>
</Window>
